        <Button x:Name="beforeTheStormButton" Content="11. Before the Storm" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="177,544,0,0" RequestedTheme="Dark" Click="beforeTheStormButton_Click" Height="38" Width="164" Grid.RowSpan="2"/>
        <!--next item-->
        <Button x:Name="battleOfSunaionButton" Content="12. Battle of Sunaion" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="387,544,0,0" RequestedTheme="Dark" Click="battleOfSunaionButton_Click" Height="38" Width="169" Grid.RowSpan="2"/>
        <!--next item-->
        <Button x:Name="genesisButton" Content="13. Genesis" HorizontalAlignment="Stretch" VerticalAlignment="Top" RequestedTheme="Dark" Margin="602,544,583,0" Click="genesisButton_Click" Height="38" Grid.RowSpan="2"/>
