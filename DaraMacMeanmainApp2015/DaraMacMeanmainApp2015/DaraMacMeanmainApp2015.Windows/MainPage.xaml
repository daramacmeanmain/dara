        </Grid.RowDefinitions>
        <Grid.Background>
            <ImageBrush ImageSource ="/Assets/h5background.jpg" Opacity="0.25"></ImageBrush>
        </Grid.Background>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="390,215,395,0" Height="105" Width="581" SelectionChanged="textBlock_SelectionChanged" FontSize="45" TextWrapping="Wrap" TextAlignment="Center" RenderTransformOrigin="0.499,0.091">
        	<Run Text="Halo 5: Guardians"/>
        	<LineBreak/>
        	<Run Text="Intel and Skulls Guide"/>
        </TextBlock>
        <Button x:Name="osirisButton" Content="1. Osiris" HorizontalAlignment="Left" VerticalAlignment="Top" RequestedTheme="Dark" Margin="180,384,0,0" Click="osirisButton_Click" Height="38" Width="164"/>
        <!--next item-->
        <Button x:Name="blueTeamButton" Content="2. Blue Team" HorizontalAlignment="Left" VerticalAlignment="Top" RequestedTheme="Dark" Margin="387,384,0,0" Click="blueTeamButton_Click" Width="169" Height="38"/>
        <!--next item-->
        <Button x:Name="glassedButton" Content="3. Glassed" HorizontalAlignment="Stretch" VerticalAlignment="Top" RequestedTheme="Dark" Margin="602,384,583,0" Click="glassedButton_Click" Height="38"/>
        <!--next item-->
        <Button x:Name="meridianStationButton" Content="4. Meridian Station" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,384,392,0" RequestedTheme="Dark" Click="meridianStationButton_Click" Height="38" Width="164"/>
        <!--next item-->
        <Button x:Name="unconfirmedButton" Content="5. Unconfirmed" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,384,177,0" RequestedTheme="Dark" Click="unconfirmedButton_Click" Height="38" Width="164"/>
