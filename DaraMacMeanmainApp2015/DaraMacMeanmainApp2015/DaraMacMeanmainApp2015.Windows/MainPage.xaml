        <!--next item-->
        <Button x:Name="reunionButton" Content="7. Reunion" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="387,464,0,0" RequestedTheme="Dark" Click="reunionButton_Click" Height="38" Width="169"/>
        <!--next item-->
        <Button x:Name="swordsOfSangeliosButton" Content="8. Swords of Sangelios" HorizontalAlignment="Stretch" VerticalAlignment="Top" RequestedTheme="Dark" Margin="602,464,583,0" Click="swordsOfSangeliosButton_Click" Height="38"/>
