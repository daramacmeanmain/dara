        <!--next item-->
        <Button x:Name="enemyLinesButton" Content="10. Enemy Lines" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,464,177,0" RequestedTheme="Dark" Click="enemyLinesButton_Click" Height="38" Width="164"/>
